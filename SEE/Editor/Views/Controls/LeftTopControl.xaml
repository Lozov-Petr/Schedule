                Background="White"
                MinWidth="20"
                MinHeight="20"
                MaxWidth="100"
                MaxHeight="100"
                CornerRadius="20,20,0,20">
            
<!--            <Border BorderThickness="1"
                    BorderBrush="Black"
                    Background="Ivory"
                    Width="20"
                    Height="20"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    CornerRadius="20,20,0,20">

