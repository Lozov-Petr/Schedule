<Window x:Class="Editor.Views.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:userControls="clr-namespace:Editor.UserControls"
        xmlns:viewModels="clr-namespace:Editor.ViewModels"
        Title="EditorWindow" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        x:Name="Window">
    <DockPanel>
        <Menu Height="20"
              DockPanel.Dock="Top">
            <MenuItem Header="Правка">
                <MenuItem Header="Группы"
                          Command="{Binding OpenGroupsEditorCommand}"
                          />
                <MenuItem Header="Преподаватели"
                          Command="{Binding OpenLecturersEditorCommand}"
                          />
                <MenuItem Header="Аудитории"
                          Command="{Binding OpenRoomsEditorCommand}"
                          />
            </MenuItem>
        </Menu>
        <TabControl>
            <TabItem Header="Расписание">
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      >
                    <StackPanel >
                        <userControls:Table/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
