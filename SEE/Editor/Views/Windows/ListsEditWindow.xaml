<Window x:Class="Editor.Views.Windows.ListsEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:userControls="clr-namespace:Editor.UserControls"
        xmlns:converters="clr-namespace:Editor.Converters"
        Title="ListsEditWindow" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <TabControl x:Name="SectionsTabControl"
                    SelectedIndex="{Binding ActiveTab, Converter={converters:ListsEditorTabToIntConverter}}">
            <TabItem Header="Группы">
                    <userControls:GroupEditPanel x:Name="GroupEditPanel"/>
            </TabItem>
            <TabItem Header="Преподаватели">
                <userControls:LecturerEditPanel  x:Name="LecturerEditPanel"/>
            </TabItem>
            <TabItem Header="Аудитории">
                <userControls:ClassroomEditPanel x:Name="ClassroomEditPanel"/>
            </TabItem>
            <TabItem Header="Специальности">
                <userControls:SpecializationEditPanel x:Name="SpecializationEditPanel"/>
            </TabItem>
            <TabItem Header="Курсы">
                <userControls:YearOfStudyEditPanel x:Name="YearOfStudyEditPanel"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
