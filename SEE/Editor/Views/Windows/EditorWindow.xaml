<Window x:Class="Editor.Views.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:userControls="clr-namespace:Editor.UserControls"
		xmlns:viewModels="clr-namespace:Editor.ViewModels"
		xmlns:controls="clr-namespace:Editor.Views.Controls"
		xmlns:models="clr-namespace:Editor.Models"
		Title="EditorWindow" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        x:Name="Window">
    
    <Window.DataContext>
        <viewModels:EditorWindowViewModel />
    </Window.DataContext>
    
    <DockPanel>
        <Menu Height="20"
              DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Открыть проект"
                          Command="{Binding LoadDataCommand}"/>
            </MenuItem>
            <MenuItem Header="Правка">
                <MenuItem Header="Группы"
                          Command="{Binding OpenGroupsEditorCommand}"
                          IsEnabled="{Binding HasActiveProject, Mode=OneWay}"
                          />
                <MenuItem Header="Преподаватели"
                          Command="{Binding OpenLecturersEditorCommand}"
                          IsEnabled="{Binding HasActiveProject, Mode=OneWay}"
                          />
                <MenuItem Header="Аудитории"
                          Command="{Binding OpenClassroomsEditorCommand}"
                          IsEnabled="{Binding HasActiveProject, Mode=OneWay}"
                          />
                <MenuItem Header="Специальности"
                          Command="{Binding OpenSpecializationsEditorCommand}"
                          IsEnabled="{Binding HasActiveProject, Mode=OneWay}"
                          />
                <MenuItem Header="Курсы"
                          Command="{Binding OpenYearsOfStudyEditorCommand}"
                          IsEnabled="{Binding HasActiveProject, Mode=OneWay}"
                          />
            </MenuItem>
        </Menu>
        <controls:TablesController DataContext="{Binding TablesControllerDataContext}"/>
    </DockPanel>
</Window>
