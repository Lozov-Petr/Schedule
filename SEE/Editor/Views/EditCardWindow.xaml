<Window x:Class="Editor.Views.EditCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditCardWindow" Height="100" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="ToolWindow" Closed="Window_Closed"
        FocusManager.FocusedElement="{Binding ElementName=tbEdit}">
    <StackPanel>
        <TextBox x:Name="tbEdit"
                 Text="{Binding Data, Mode=TwoWay}"
                 Margin="10"
                 PreviewKeyDown="EnterClicked"/>
        <Button Content="OK"
                Width="75"
                HorizontalAlignment="Right"
                Margin="10,0,10,10"
                Click="OkButton_OnClick"/>
    </StackPanel>
</Window>
